#cloud-config
package_update: false
package_upgrade: false

runcmd:
  - |
    set -e
    echo "[INFO] Bootstrap started"

    curl -fsSL https://raw.githubusercontent.com/PV-Quang/Kubernetes/main/cluster/master-01.sh -o /tmp/k8s.sh

    chmod +x /tmp/k8s.sh

    /tmp/k8s.sh

power_state:
  mode: reboot
